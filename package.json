{
  "name": "botbuilder-wechaty-connector",
  "version": "0.0.7",
  "description": "Microsoft Bot Framework v3 Connector for Wechat PERSONAL Account",
  "main": "src/wechaty-connector.js",
  "typings": "src/wechaty-connector.d.ts",
  "scripts": {
    "clean": "shx rm -fr dist/*",
    "dist": "npm run clean && tsc && shx cp {package.json,README.md,LICENSE} dist/",
    "example": "ts-node examples/example.ts",
    "lint": "npm run lint:ts",
    "lint:ts": "tslint --project tsconfig.json && tsc --noEmit",
    "test": "npm run lint",
    "test:pack": "npm run dist && export TMPDIR=/tmp/pack-testing.$$ && (cd dist && npm pack) && mkdir $TMPDIR && mv dist/*-*.*.*.tgz $TMPDIR && cp tests/fixtures/smoke-testing.js $TMPDIR && cd $TMPDIR && npm init -y && npm i *-*.*.*.tgz && node smoke-testing.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zixia/botbuilder-wechaty-connector.git"
  },
  "keywords": [
    "weixin",
    "wechat",
    "wechaty",
    "botbuilder",
    "connector"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zixia/botbuilder-wechaty-connector/issues"
  },
  "homepage": "https://github.com/zixia/botbuilder-wechaty-connector#readme",
  "dependencies": {
    "botbuilder": "^3.2.0",
    "qrcode-terminal": "^0.12.0",
    "wechaty": "^0.14.0"
  },
  "devDependencies": {
    "@types/blue-tape": "^0.1.31",
    "@types/node": "^9.6.5",
    "blue-tape": "^1.0.0",
    "git-scripts": "^0.2.1",
    "shx": "^0.2.2",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "git": {
    "scripts": {
      "pre-push": "./scripts/pre-push.sh"
    }
  }
}
