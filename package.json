  "bugs": {
    "url": "https://github.com/huan/botbuilder-wechaty-connector/issues"
  },
  "homepage": "https://github.com/huan/botbuilder-wechaty-connector#readme",
  "dependencies": {
    "botbuilder": "^4.2.0",
    "qrcode-terminal": "^0.12.0",
    "wechaty": "^0.22.1"
  },
  "devDependencies": {
    "@types/blue-tape": "^0.1.31",
    "@types/node": "^10.0.3",
    "blue-tape": "^1.0.0",
